set -e

REPO_ROOT="$(dirname "$(dirname "$(realpath "$0")")")"
PYTHONPATH="$REPO_ROOT"
export PYTHONPATH

# Build candidate interpreters in preference order
candidates=()
if [ -n "${VIRTUAL_ENV:-}" ] && [ -x "$VIRTUAL_ENV/bin/python3" ]; then
  candidates+=("$VIRTUAL_ENV/bin/python3")
fi
if [ -x "$REPO_ROOT/venv/bin/python3" ]; then
  candidates+=("$REPO_ROOT/venv/bin/python3")
fi
if command -v python3 >/dev/null 2>&1; then
  candidates+=("python3")
fi

# Pick the first interpreter that can import PyYAML; else fall back to the first available candidate
PY=""
for p in "${candidates[@]}"; do
  if "$p" -c 'import yaml' >/dev/null 2>&1; then
    PY="$p"
    break
  fi
done

if [ -z "$PY" ]; then
  # none could import yaml; fall back to the first candidate (if any) or python3
  if [ ${#candidates[@]} -gt 0 ]; then
    PY="${candidates[0]}"
  else
    PY="python3"
  fi
fi

exec "$PY" -m bzfs_main.bzfs_joblauncher "$@"
